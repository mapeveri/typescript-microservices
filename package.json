{
  "name": "typescript-microservices",
  "private": true,
  "scripts": {
    "build:order-service": "nest build order-service",
    "build:invoice-service": "nest build invoice-service",
    "format-code-check": "prettier --check \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "linter-check": "eslint \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start:order-service": "nest start order-service",
    "start:invoice-service": "nest start invoice-service",
    "start:dev:order-service": "nest start order-service --watch",
    "start:dev:invoice-service": "nest start invoice-service --watch",
    "start:debug:order-service": "nest start order-service --debug --watch",
    "start:debug:invoice-service": "nest start invoice-service --debug --watch",
    "start:prod:order-service": "node dist/apps/order-service/main.js",
    "start:prod:invoice-service": "node dist/apps/invoice-service/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test:unit": "vitest run --config vitest.config.mts",
    "test:unit:watch": "vitest --config vitest.config.mts --watch",
    "test:unit:cov": "vitest run --config vitest.config.mts --coverage",
    "test:all:mutant": "stryker run",
    "test:mutant": "stryker run -m $(git --no-pager diff --name-only main --diff-filter=AM -- apps/ | grep -v 'spec.ts' | grep -v '/infrastructure/' | grep -v '/infra/' | tr '\\n' ',' | sed 's/\\(.*\\),/\\1 /')"
  },
  "dependencies": {
    "@golevelup/nestjs-rabbitmq": "^6.0.1",
    "@mikro-orm/core": "^6.4.15",
    "@mikro-orm/mongodb": "^6.4.15",
    "@mikro-orm/nestjs": "^6.1.1",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/cqrs": "^11.0.3",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "express": "^5.1.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "unplugin-swc": "^1.5.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@faker-js/faker": "^9.8.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@stryker-mutator/core": "^9.0.1",
    "@stryker-mutator/vitest-runner": "^9.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/express": "^5.0.0",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^3.1.4",
    "@vitest/ui": "^3.1.4",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "vite": "^6.3.5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.4"
  }
}